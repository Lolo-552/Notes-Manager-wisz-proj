@model Notes_Manager.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć kategorie?</h3>
<div>
    <h4>Spowoduje to usunięcie wszystkich powiązanych z nią notatek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kategoria:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="action-button" style="background: #dc3545;" />
        <a asp-action="Index" class="action-button">Wstecz</a>
    </form>
</div>
