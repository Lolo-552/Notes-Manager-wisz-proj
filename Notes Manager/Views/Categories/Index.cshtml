@model IEnumerable<Notes_Manager.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Kategorie</h1>

<p>
    <a asp-action="Create" class="action-button">Dodaj</a>
    <a asp-controller="Home" asp-action="Index" class="action-button">Wstecz</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="d-flex justify-content-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-dark" style="margin-right: 10px;">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
