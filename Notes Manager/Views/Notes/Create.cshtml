@model Notes_Manager.Models.Notes

@{
    ViewData["Title"] = "Create";
}

<h1>Dodawanie Notatki</h1>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Kategoria:
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" style="width: fit-content; display: unset"></select>
                <a asp-controller="Categories" asp-action="Create" target="_blank" class="action-button">Dodaj Kategorie</a>
            </div>
            <div class="form-group">
                <!--<label asp-for="Title" class="control-label"></label>-->
                <textarea asp-for="Title" class="form-control" placeholder="Tytuł" rows="1"></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--<label asp-for="Content" class="control-label"></label>-->
                <textarea asp-for="Content" class="form-control" placeholder="Treść" rows="20" /></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="action-button" />
                <a asp-action="Index" class="action-button">Wstecz</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}