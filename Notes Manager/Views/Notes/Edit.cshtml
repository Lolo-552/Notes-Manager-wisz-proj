@model Notes_Manager.Models.Notes

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

<hr />
<div class="row">
    <div class="col">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Kategoria:
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" style="width: fit-content; display: unset"></select>
                <a asp-controller="Categories" asp-action="Create" target="_blank" class="action-button">Dodaj Kategorie</a>
            </div>
            <div class="form-group">
                <textarea asp-for="Title" class="form-control" rows="1">@Model.Title</textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Content" class="form-control" rows="20">@Model.Content</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="action-button" />
                <a asp-action="Index" class="action-button">Wstecz</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
