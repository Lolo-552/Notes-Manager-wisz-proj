@using Microsoft.AspNetCore.Identity
@using Notes_Manager.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark identity-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <form class="form-inline identity-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark identity-link" asp-area="Identity" asp-page="/Account/Register">Zarejestuj</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark identity-link" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
    </li>
}
</ul>
<style>
    .identity-link {
        border: solid 1px #626262;
        border-radius: 20px;
        margin-left: 10px;
    }
</style>